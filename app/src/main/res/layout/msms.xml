<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".m_s_m_s"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/msms_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/rec"
            android:layout_gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/series_rect"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:elevation="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:id="@+id/msms_name"
                    android:layout_weight="4"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12dp"
                    android:background="@drawable/genre_box"
                    android:text="genre"
                    android:id="@+id/msms_genre"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="7.5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/msms_rating" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17.5dp"
                    android:layout_marginTop="-12dp"
                    android:text="IMDB" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-7.5dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="RATING" />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/desc_box"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/msms_name1"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:gravity="top|left"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DESCRIPTION"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:id="@+id/msms_desc"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Director : "
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Director"
                    android:id="@+id/msms_direc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stars : "
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stars"
                    android:id="@+id/msms_actor" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp">


            <Button
                android:id="@+id/download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="Download" />

            <Button
                android:id="@+id/watch_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Watch Now"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>